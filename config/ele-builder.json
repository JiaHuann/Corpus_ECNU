{
    "appId": "com.electron.Corpus",
    "productName": "Corpus",
    "nodeGypRebuild": false,
    "asar": false,
    "file":[
        "!README.md",
        "!assets/app_icon${/*}",
        "!assets/show_assets${/**/*}",
        "!docs${/*}"
    ],
    "win": {
        "target":[
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "assets/app_icon/main_icon.png"
    },
    "mac": {
        "icon": "assets/app_icon/main_icon.png",
        "target": [
            {
                "target": "zip",
                "arch": [
                    "arm64"
                ]
            }
        ]
    }
}